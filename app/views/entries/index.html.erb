<h1><%= @project.name %></h1>
<ul>
  <% @entries.each do |entry| %>
    <li>
      <%= entry.hours %> h
      <%= entry.minutes %>m
      <%= entry.date.to_date %> -
      <%= link_to 'Edit', edit_project_entry_path(@project, entry) %>
    </li>
    <%end%>
</ul>

<%= link_to 'Projects', projects_path %>
<%= link_to 'New Entry', new_project_entry_path(@project) %>


<!-- @current_month_hours lo definimos en el controlador del proyecto-->
<p> The total hours worked this month is: <%= @current_month_hours %></p>